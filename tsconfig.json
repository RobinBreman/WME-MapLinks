{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["wme-sdk-typings", "jquery", "proj4"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
